#!/usr/bin/expect

set user [lindex $argv 0]
set ip [lindex $argv 1]
set passwd [lindex $argv 2]
set deploy_home [lindex $argv 3]
set hadoop_home ${deploy_home}/hadoop
set prompt "*${user}@*\\\$"
if { $user == "root" } {
        set prompt "*${user}@*#"
}
spawn ssh ${user}@${ip}
set timeout -1
expect {     
        -nocase  "yes/no" {send "yes\n";exp_continue}
        -nocase  "password" {send "$passwd\n"}
        "${prompt}" {send "\r"}
}
expect "${prompt}"
send "rm -f /tmp/hadoop-*-namenode.pid\r"
expect "${prompt}"
send "${hadoop_home}/bin/hadoop namenode -format\r"
expect "${prompt}"
send "exit\r"
expect eof


